---
import { NewsletterImpl } from "@common/components/NewsletterImpl.tsx";

type Props = {
  theme?: "Brettspiele" | "Rollenspiele" | "Tabletop";
  frequency?: "oft" | "selten";
};

const { theme, frequency } = Astro.props;
const currentPage = Astro.url;
if (import.meta.env.ENV === "test") {
  currentPage.hostname = "test." + currentPage.hostname;
}
---

<NewsletterImpl theme={theme} frequency={frequency} referer={currentPage} />
