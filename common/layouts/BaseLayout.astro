---
import Favicon from "./partials/favicon.astro";
import Header from "./partials/header.astro";
import Footer from "./partials/footer.astro";
import type { NavigationEntry } from "@common/layouts/types.ts";

type Props = {
	locale?: "de" | "en";
	title?: string;
	description?: string;
	keywords?: string;
	siteCode: string;
	siteName: string;
	siteTagline: string;
	mainNavigation: NavigationEntry[];
	secondaryNavigation: NavigationEntry[];
	development: boolean;
};

const { 
	locale, 
	title, 
	description, 
	keywords, 
	siteCode, 
	siteName, 
	siteTagline,
	mainNavigation, 
	secondaryNavigation, 
	development,
} = Astro.props;
---
<!DOCTYPE html>
<html lang={ locale ?? "de" } dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
		{ description && (
			<meta name="description" content={ description }>
		) }
		{ keywords && (
			<meta name="keywords" content={ keywords }>
		) }
    <title>{ title }</title>
    <script src="/common/icons/duotone.min.js" defer is:inline></script>
    <script src="/common/icons/fontawesome.min.js" defer is:inline></script>
    <link rel="preload" as="font" crossorigin="anonymous" href="/common/fonts/krona-one-normal-400.woff2" type="font/woff2">
    <link rel="preload" as="font" crossorigin="anonymous" href="/common/fonts/dm-sans-normal-400.woff2" type="font/woff2">
    <Favicon/>
</head>

<body class={ siteCode }>
  <Header 
		siteCode={ siteCode } 
		siteName={ siteName } 
		siteTagline={ siteTagline } 
		mainNavigation={ mainNavigation } 
		secondaryNavigation={ secondaryNavigation } />
    <div class="main-wrapper">
        <main class="primary-content content">
            <slot/>
        </main>
    </div>
    <Footer development={ development } />
</body>

</html>
