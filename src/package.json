{
  "name": "gilde-der-nacht-websites",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:gilde-der-nacht/website.git",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "sass": "^1.47.0"
  },
  "scripts": {
    "gdn:dev": "yarn gdn:11ty:dev & yarn gdn:sass:dev",
    "gdn:11ty:dev": "eleventy --config=websites/gildedernacht.ch/config.js --serve",
    "gdn:sass:dev": "sass themes/crimson/sass/gildedernacht.ch.scss _site/gildedernacht.ch/style/style.css --watch",
    "rst:dev": "yarn rst:11ty:dev & yarn rst:sass:dev",
    "rst:11ty:dev": "eleventy --config=websites/rollenspieltage.ch/config.js --serve",
    "rst:sass:dev": "sass themes/crimson/sass/rollenspieltage.ch.scss _site/rollenspieltage.ch/style/style.css --watch",
    "gdn:build": "yarn gdn:11ty:build & yarn gdn:sass:build",
    "gdn:11ty:build": "eleventy --config=websites/gildedernacht.ch/config.js",
    "gdn:sass:build": "sass themes/crimson/sass/gildedernacht.ch.scss _site/gildedernacht.ch/style/style.css --style=compressed",
    "rst:build": "yarn rst:11ty:build & yarn rst:sass:build",
    "rst:11ty:build": "eleventy --config=websites/rollenspieltage.ch/config.js",
    "rst:sass:build": "sass themes/crimson/sass/rollenspieltage.ch.scss _site/rollenspieltage.ch/style/style.css --style=compressed"
  }
}
