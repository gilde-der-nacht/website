{
  "name": "gilde-der-nacht-websites",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:gilde-der-nacht/website.git",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-img": "^1.0.0",
    "@11ty/eleventy-navigation": "^0.3.2",
    "luxon": "^2.5.2",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-toc-done-right": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "sanitize-html": "^2.6.1",
    "sass": "^1.47.0",
    "slugify": "^1.6.5"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:gdn": "npm-run-all --parallel dev:gdn:*",
    "dev:gdn:11ty": "ELEVENTY_ENV=development eleventy --config=websites/gildedernacht.ch/config.js --port=1111 --serve",
    "dev:gdn:sass": "sass themes/crimson/sass/gildedernacht.ch.scss _site/gildedernacht.ch/style/style.css --watch",
    "dev:lst": "npm-run-all --parallel dev:lst:*",
    "dev:lst:11ty": "ELEVENTY_ENV=development eleventy --config=websites/spieltage.ch/config.js --port=1112 --serve",
    "dev:lst:sass": "sass themes/crimson/sass/spieltage.ch.scss _site/spieltage.ch/style/style.css --watch",
    "dev:rst": "npm-run-all --parallel dev:rst:*",
    "dev:rst:11ty": "ELEVENTY_ENV=development eleventy --config=websites/rollenspieltage.ch/config.js --port=1113 --serve",
    "dev:rst:sass": "sass themes/crimson/sass/rollenspieltage.ch.scss _site/rollenspieltage.ch/style/style.css --watch",
    "dev:ttt": "npm-run-all --parallel dev:ttt:*",
    "dev:ttt:11ty": "ELEVENTY_ENV=development eleventy --config=websites/tabletoptage.ch/config.js --port=1114 --serve",
    "dev:ttt:sass": "sass themes/crimson/sass/tabletoptage.ch.scss _site/tabletoptage.ch/style/style.css --watch",
    "build": "npm-run-all --parallel build:*",
    "build:gdn": "npm-run-all --parallel build:gdn:*",
    "build:gdn:11ty": "eleventy --config=websites/gildedernacht.ch/config.js",
    "build:gdn:sass": "sass themes/crimson/sass/gildedernacht.ch.scss _site/gildedernacht.ch/style/style.css --style=compressed",
    "build:lst": "npm-run-all --parallel build:lst:*",
    "build:lst:11ty": "eleventy --config=websites/spieltage.ch/config.js",
    "build:lst:sass": "sass themes/crimson/sass/spieltage.ch.scss _site/spieltage.ch/style/style.css --style=compressed",
    "build:rst": "npm-run-all --parallel build:rst:*",
    "build:rst:11ty": "eleventy --config=websites/rollenspieltage.ch/config.js",
    "build:rst:sass": "sass themes/crimson/sass/rollenspieltage.ch.scss _site/rollenspieltage.ch/style/style.css --style=compressed",
    "build:ttt": "npm-run-all --parallel build:ttt:*",
    "build:ttt:11ty": "eleventy --config=websites/tabletoptage.ch/config.js",
    "build:ttt:sass": "sass themes/crimson/sass/tabletoptage.ch.scss _site/tabletoptage.ch/style/style.css --style=compressed",
    "debug": "DEBUG=Eleventy* yarn build"
  }
}
